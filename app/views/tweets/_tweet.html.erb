<div id="<%= dom_id(tweet) %>" class="card card-body mb-3">
  <div>
    <%= image_tag gravatar_image_url(tweet.user.email, size: 40), height: 20, width: 20, class: "rounded-circle" %>
    <%= tweet.user.name %>
  </div>
  <div><%= tweet.body %></div>
  <div class="text-muted"><small><%= tweet.created_at %></small></div>
</div>